---
layout: default
---
<style>
  .home-header {
    text-align: center;
    margin-bottom: 40px;
  }
  .home-header h1 {
    font-family: serif;
    font-weight: bold;
    font-size: 3rem;
    color: #000;
    margin-bottom: 20px;
  }
  .home-header p {
    max-width: 600px;
    margin: 0 auto;
    color: #666;
    font-size: 1rem;
    line-height: 1.6;
  }
  .page-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    margin-bottom: 0;
  }
  .page-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .content-overlay {
    background: #fff;
    width: 80%;
    max-width: 800px;
    margin: -100px auto 50px; /* Negative top margin for overlap */
    padding: 60px;
    position: relative;
    z-index: 10;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }
  .content-overlay h2 {
    font-family: serif; /* Match the title font */
    font-weight: bold;
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1.8rem;
  }
  .content-overlay p {
    color: #555;
    margin-bottom: 20px;
    line-height: 1.8;
  }
  .btn-read-more {
    background-color: #4a54a4; /* Blue/Purple color from image */
    color: #fff;
    padding: 12px 30px;
    border: none;
    text-transform: uppercase;
    font-size: 0.9rem;
    margin-top: 20px;
    display: inline-block;
    text-decoration: none;
  }
  .btn-read-more:hover {
    background-color: #3a4280;
    color: #fff;
    text-decoration: none;
  }
</style>

<div class="home-container">
  <div class="home-header">
    <h1>{{ site.full_name }}</h1>
    <p class="subtitle" style="font-size: 1.5rem; color: #333; margin-bottom: 1rem;">{{ page.subtitle }}</p>
    <div class="desc">
      {{ page.desc }}
    </div>
  </div>

  <div class="page-image">
    {% if page.header_img %}
      {% assign header_image_path = page.header_img %}
      {% include figure.liquid loading="eager" path=header_image_path class="img-fluid w-100" alt="hero image" %}
    {% endif %}
  </div>

  <div class="content-overlay">
    {{ content }}
  </div>
</div>
